<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:db.properties"/>

    <bean id="dataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${dataSource.driverClassName}"/>
        <property name="url" value="${dataSource.url}"/>
        <property name="username" value="${dataSource.username}"/>
        <property name="password" value="${dataSource.password}"/>
    </bean>

    <bean id="dao"
          class="ua.org.javatraining.andrii_tkachenko.data.dao.AbstractJdbcDAO" abstract="true">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="customerDAO"
          class="ua.org.javatraining.andrii_tkachenko.data.dao.CustomerDAO" parent="dao">
    </bean>

    <bean id="orderDAO"
          class="ua.org.javatraining.andrii_tkachenko.data.dao.CustomOrderDAO" parent="dao">
    </bean>

    <bean id="orderItemDAO"
          class="ua.org.javatraining.andrii_tkachenko.data.dao.OrderItemDAO" parent="dao">
    </bean>

    <bean id="productDAO"
          class="ua.org.javatraining.andrii_tkachenko.data.dao.ProductDAO" parent="dao">
    </bean>

    <bean id="visualizationDAO"
          class="ua.org.javatraining.andrii_tkachenko.data.dao.VisualizationDAO" parent="dao">
    </bean>

    <bean id="attributeDAO"
          class="ua.org.javatraining.andrii_tkachenko.data.dao.attribute.AttributeDAO" parent="dao">
    </bean>

    <bean id="categoryDAO"
          class="ua.org.javatraining.andrii_tkachenko.data.dao.category.CategoryDAO" parent="dao">
    </bean>

    <bean id="categoryAssociationDAO"
          class="ua.org.javatraining.andrii_tkachenko.data.dao.category.CategoryAssociationDAO" parent="dao">
    </bean>
</beans>